<?xml version='1.0' encoding='utf-8'?>
<widget id="com.byethost33.amanzimtoti" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Amanzimtoti</name>
    <description>
        Amanzimtoti App - for Registered users
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <icon src="www/icon.png" />

        <splash src="www/screen/android/splash-land-hdpi.png" density="land-hdpi" />
        <splash src="www/screen/android/splash-land-ldpi.png" density="land-ldpi" />
        <splash src="www/screen/android/splash-land-mdpi.png" density="land-mdpi" />
        <splash src="www/screen/android/splash-land-xhdpi.png" density="land-xhdpi" />
        <splash src="www/screen/android/splash-land-xxhdpi.png" density="land-xxhdpi" />
        <splash src="www/screen/android/splash-land-xxxhdpi.png" density="land-xxxhdpi" />

        <splash src="www/screen/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="www/screen/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="www/screen/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="www/screen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="www/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="www/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" />
    </platform>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-intent href="*" />
</widget>
